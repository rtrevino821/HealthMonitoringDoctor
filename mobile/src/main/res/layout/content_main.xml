<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.healthmonitoringdoctor.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/btn_view_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/view_profile_bg" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:text="@string/my_patients"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif-condensed"
                android:textSize="55sp"
                android:shadowColor="#88000000"
                android:shadowDx="0"
                android:shadowDy="10"
                android:shadowRadius="10" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/btn_hr_history"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/heart_history_bg"
                android:adjustViewBounds="false" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="@string/view_alerts"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif-condensed"
                android:textSize="55sp"
                android:shadowColor="#88000000"
                android:shadowDx="0"
                android:shadowDy="10"
                android:shadowRadius="10"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/btn_check_my_pulse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/check_my_pulse_bg"
                android:tint="@color/colorAccent"
                android:tintMode="multiply" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:paddingRight="@dimen/activity_vertical_margin"
                android:text="@string/check_my_pulse"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif-condensed"
                android:textSize="55sp"
                android:shadowColor="#88000000"
                android:shadowDx="0"
                android:shadowDy="10"
                android:shadowRadius="10"/>
        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>
